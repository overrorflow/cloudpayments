@functions
{
    public Secure3dForm(Secure3dFormModel model)
    {
        Model = model;
    }

    public Secure3dFormModel Model { get; set; }
}
@{
    Response.ContentType = "text/html; charset=utf-8";
    string location = string.Empty;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
</head>
<body>
    <form name="downloadForm" action="@Model.AcsUrl" method="POST">
        <input type="hidden" name="PaReq" value="@Model.PaReq">
        <input type="hidden" name="MD" value="@Model.MD">
        <input type="hidden" name="TermUrl" value="@Model.TempUrl">
    </form>
    <script>
        window.onload = submitForm;
        function submitForm() { downloadForm.submit(); }
    </script>
</body>
</html>
